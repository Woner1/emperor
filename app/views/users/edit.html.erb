<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %><li>
      <% end %>
    </ul>
  <% end %>
 
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
 
  <p>
    <%= f.label :FirstName %>
    <%= f.text_field :first_name %>
  </p>

  <p>
    <%= f.label :LastName %>
    <%= f.text_field :last_name %>
  </p>

  <p>
    <%= f.label :Phone %>
    <%= f.text_field :phone %>
  </p>

  <p>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>